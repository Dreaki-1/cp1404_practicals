BoxLayout:
    orientation: 'vertical'
    id: main_box
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_box
            font_size: 40
            on_text: app.calculate(self.text)
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.20
            Button:
                text: 'Up'
                on_press: app.adjust_input(input_box.text, +1)
            Button:
                text: 'Down'
                on_press: app.adjust_input(input_box.text, -1)
    Button:
        text: 'Convert miles to km'
        on_press: app.calculate(input_box.text)
    Label:
        id: output_box
        text: app.output_in_km
        font_size: 40
        color: (1, 1, 0, 1)